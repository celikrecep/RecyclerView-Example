<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/list_item_city_height"
    android:layout_height="@dimen/list_item_city_height"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/imgCity"
        android:layout_width="@dimen/list_item_city_height"
        android:layout_height="@dimen/list_item_city_height"
        android:contentDescription="@string/content_description_city_image"
        app:layout_constraintBottom_toTopOf="@id/txtCityName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/c_city"/>
    <TextView
        android:id="@+id/txtCityName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/padding_average"
        android:layout_marginEnd="@dimen/padding_standard"
        android:layout_marginStart="@dimen/padding_standard"
        android:textColor="@android:color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imgCity"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:text="City Name"/>

</android.support.constraint.ConstraintLayout>